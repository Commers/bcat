#!/usr/bin/env ruby
# Usage: bcat [<file>]...
# Concatenate <file>s, or standard input, to browser.
require 'bcat'

fds =
  ARGV.map do |file|
    if file == '-'
      $stdin
    else
      File.open(file, 'rb')
    end
  end
fds = [$stdin] if fds.empty?

pid = nil
bcat = Bcat.new(fds)
bcat.serve! do |sock|
  pid =
    fork do
      (fds + [sock, $stdin, $stdout]).uniq.each { |fd| fd.close }
      exec "open http://#{bcat[:Host]}:#{bcat[:Port]}/#{File.basename(Dir.pwd)}"
    end
end

Process.wait(pid) if pid
